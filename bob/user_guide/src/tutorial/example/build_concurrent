#!/usr/bin/env bob

# Compile main.cpp
c++ -o { file = main } -c (track main.cpp) { env = { PATH = $ } }
# Compile lib.cpp
c++ -o { file = lib } -c (track lib.cpp) { env = { PATH = $ } }

# Link the object files together
c++ -o { file = exe } $main $lib { env = { PATH = $ } }

# Link to a file in the current directory.
ln -f $exe forty_two
